<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
<%= link_to image_tag("nebula_logo.png"), cocktails_path, :class => 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Cocktails List', cocktails_path, :class => 'nav-link' %>
      </li>
      <li>
        <%= link_to 'Add a cocktail', new_cocktail_path, :class => 'nav-link'%>
      </li>
    </ul>
  </div>
</div>

<div class="bordered-title">
  <h1>Welcome to Cocktail Nebula</h1>
  <p>Create your favorite mixes!</p>
</div>

<div class="container">
  <div class="col-xs-12 col-sm-4">
      <div class="cards">
        <% @cocktails.each do |cocktail|%>
        <%= link_to cocktail_path(cocktail) do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.photo %>)">
              <h3><%= cocktail.name %></h3>
            </div>
        <% end %>
        <% end %>
      </div>
  </div>
</div>





