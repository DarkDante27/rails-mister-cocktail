<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to image_tag("nebula_logo.png"), cocktails_path, class: 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Cocktails List', cocktails_path, class: 'nav-link' %>
      </li>
      <li>
        <%= link_to 'Add a cocktail', new_cocktail_path, class: 'nav-link'%>
      </li>
    </ul>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-8 mt-3">
      <h1 class="bordered-title">Add a dose to <%= @cocktail.name %></h1>
      <%= simple_form_for [@cocktail, @dose], html: { id: 'simple-form' } do |f| %>
        <%= f.input :description, placeholder: '1 Dose' %>
        <%= f.association :ingredient %>
        <%= f.submit "Submit", class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
